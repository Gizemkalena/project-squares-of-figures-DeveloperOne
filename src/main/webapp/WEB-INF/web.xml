<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- square servlet -->
    <servlet>
        <servlet-name>SquareServlet</servlet-name>
        <servlet-class>app.servlets.SquareServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SquareServlet</servlet-name>
        <url-pattern>/square</url-pattern>
    </servlet-mapping>

    <!-- rectangle servlet -->
    <servlet>
        <servlet-name>RectangleServlet</servlet-name>
        <servlet-class>app.servlets.RectangleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RectangleServlet</servlet-name>
        <url-pattern>/rectangle</url-pattern>
    </servlet-mapping>

    <!-- triangle servlet -->
    <servlet>
        <servlet-name>TriangleServlet</servlet-name>
        <servlet-class>app.servlets.TriangleServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TriangleServlet</servlet-name>
        <url-pattern>/triangle</url-pattern>
    </servlet-mapping>

    <!-- triangle trapezoid -->
    <servlet>
        <servlet-name>TrapezoidServlet</servlet-name>
        <servlet-class>app.servlets.TrapezoidServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TrapezoidServlet</servlet-name>
        <url-pattern>/trapezoid</url-pattern>
    </servlet-mapping>

</web-app>